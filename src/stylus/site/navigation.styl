.site-nav
  display none
  font-size 0
  list-style-type none
  @media ipadsAndUp
    display inline-block
    margin-left 6px
    vertical-align middle
.site-nav__list-item
  display inline-block
  font-size 16px
.site-nav__item
  display block
  font-family secondaryFontFamily
  letter-spacing 2px
  text-decoration none
  text-transform uppercase

.site-nav-toggle
  background-color #fff
  cursor pointer
  display inline-block
  height 52px
  overflow hidden
  position absolute
  right 0
  text-indent 200%
  top 0
  white-space nowrap
  width 60px
  &:focus
    outline none
  @media ipadsAndUp
    background-color bestBeautyPink
    right 20px
    top 20px
    width 52px
