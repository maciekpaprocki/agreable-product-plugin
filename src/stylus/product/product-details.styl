
.product_collection
  max-width pageColumnWidth
  margin 0 auto
  @media ipadsAndUp
    margin 0 auto 50px auto

.product_information-half
  width 100%
  display inline-block
  vertical-align middle
  margin-bottom 30px
  @media ipadsAndUp
    width 49%

.product_information-half-left
  text-align center

.product_information-image
  max-width 300px
  margin-bottom 30px

.product_information-winner-details
  margin-bottom 15px

.winner-badge
  background bestBeautyPink
  color #fff
  display inline-block
  font-weight 700
  letter-spacing 2.6px
  margin-right 10px
  padding 10px 15px
  text-transform uppercase
  vertical-align middle

.product_information-winner-details .rating-box
  display inline-block
  vertical-align middle

.product_information-brand
.product_information-description
.product_information-offer
  font-weight 300

.product_information-title
  margin-bottom 10px

.product_information-brand
  color #4e4e4e
  font-size 14px
  margin-top 0
  margin-bottom 25px

.product_information-finer-details
  border-top 1px solid #DBDBDB
  border-bottom 1px solid #DBDBDB
  padding 15px 0
  text-align right
  margin-bottom 20px

.product_information-winner-label
.product_information-price
  font-weight 700
  display inline-block
  margin 0

.product_information-winner-label
  font-size 1em
  float left

.product_information-offer
  font-size 14px
  font-style italic
  margin-bottom 0
  margin-top 5px
  text-align right

.product_information-description
  color #4e4e4e
  line-height 1.64
  margin-bottom 30px

.product_information-quote
  color #4e4e4e
  font-weight 700
  line-height 1.88

.product_information-author
  color bestBeautyPink
  font-weight 700
  line-height 1.88

.product_information-button
  background-color bestBeautyPink
  border-radius 25px
  color white
  display  inline-block
  font-weight 700
  letter-spacing 1.8
  padding 15px 75px
  text-decoration none
  @media screen and (max-width 375px)
    bottom 20px
    left 20px
    position fixed
    right 20px
    z-index 2
