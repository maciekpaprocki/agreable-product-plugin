.list-bordered
  list-style none
  margin-top 40px
  @media smallTabletsAndUp
    font-size 0
    margin-left -20px
    max-width 650px

.list-bordered__list-item
  @media smallTabletsAndUp
    font-size 16px
    display inline-block
    padding-left 20px
    width 50%
    vertical-align middle

.list-bordered__item
  border-bottom 1px solid rgba(#fff, 0.5)
  color #fff
  display block
  font-size 12px
  font-weight 600
  letter-spacing 2px
  line-height 20px
  padding 16px 8px
  text-decoration none
  text-transform uppercase

.list-bordered__list-item:last-child .list-bordered__item
  border-bottom 0

@media smallTabletsAndUp
  .list-bordered__list-item:nth-last-child(-n+2) .list-bordered__item
    border-bottom 0
