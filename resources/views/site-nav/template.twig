<button class="site-nav-open js-fr-offcanvas-open" type="button" aria-controls="site-navigation">
  {% include '@AgreableProductPlugin/icon-hamburger.svg' %}
</button>
<button class="site-nav-open site-nav-open--sticky js-fr-offcanvas-open js-site-nav-open" type="button" aria-controls="site-navigation">
  {% include '@AgreableProductPlugin/icon-hamburger.svg' %}
</button>
<section class="site-nav-container js-fr-offcanvas" id="site-navigation">
  <div class="site-nav-container__inner">
    <div class="site-nav-container__logo">
      {% include '@AgreableProductPlugin/logo-bestbeauty-portrait.svg' %}
    </div>
    <ul class="list-categories list-categories--reverse list-categories--animate">
      {% for category in product_collection.product_collection_categories %}
        <li class="list-categories__list-item">
          <a class="list-categories__item" href="{{site.url}}/shop/best-beauty/{{product_collection.slug}}/{{category.name|lower}}">
            {{category.name}}
          </a>
        </li>
      {% endfor %}
    </ul>
    {% if product_plugin.secondary_navigation %}
      <div class="wrapper wrapper--narrow">
        <ul class="sub-nav">
          {% for item in product_plugin.secondary_navigation %}
            {% set isEven = loop.length is divisible by(2) %}
            {% set applyBorder = false %}
            {% if loop.length > 2 %}
              {% if loop.length is divisible by(2) %}
                {% set applyBorder = loop.length > loop.index + 1 %}
              {% else %}
                {% set applyBorder = loop.length != loop.index %}
              {% endif %}
            {% endif %}
            <li class="sub-nav__list-item">
              <a class="sub-nav__item {% if applyBorder %}sub-nav__item--bordered{% endif %}" href="{{item.url}}">{{item.title}}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}
    <button class="site-nav-close js-fr-offcanvas-close">
      Close
    </button>
  </div>
</div>
