
//  Product list
.product-list
  padding 0 32px
  list-style none
  @media (max-width: 767px)
    overflow auto
    white-space nowrap
  @media ipadsAndUp
    padding-left 0
    margin-left auto
    margin-right auto
    max-width 1600px
.product-list--narrow
  @media ipadsAndUp
    max-width 960px

.product-list__list-item
  @media (max-width: 767px)
    max-width 420px
    white-space normal
    width calc(100vw - 96px) // should show 2 * gutter-width of next product
  @media ipadsAndUp
    width 50%
  @media (min-width: 1000px)
    width 33.333%
  @media (min-width: 1300px)
    width 25%

.product-list--narrow .product-list__list-item
  @media (min-width: 1300px)
    width 33.333%
