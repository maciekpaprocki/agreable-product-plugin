//Imports from app theme
@import 'nib'
@import 'app/constants'
@import 'allure-breakpoints'
@import 'allure-mixins'
@import 'app/mixins'

//Colors
bestBeautyPink           = #E41C6B


//Custom styles for this plugin
@import 'nav/category-links'
@import 'landing-page/landing-page'
@import 'product/star-rating'
@import 'product/share-buttons'
@import 'product/product-details.styl'
@import 'product-collection/product-grid-view.styl'


.product_collection
	max-width pageColumnWidth
	margin 0 auto
	font-family secondaryFontFamily
	@media ipadsAndUp
		margin 0 auto 50px auto
		
.product_collection-heading
	font-family secondaryFontFamily
	text-transform uppercase
	letter-spacing 3px
	line-height 1.5em
	width 60%
	margin-bottom 50px
	@media ipadsAndUp
		width 40%

.product_information-half
	width 100%
	display inline-block
	vertical-align top
	margin-bottom 30px
	@media ipadsAndUp
		width 49%
		
.product_information-half-left
	text-align center

.product_information-button
	background-color brandColor
	color white
	padding 15px 75px
	text-decoration none
	border-radius 25px
	display	inline-block
	@media smallMobilesOnly
		position fixed
		bottom 20px
		left 20px
		right 20px

.product_information-quote
	font-family secondaryFontFamily
	font-style italic
	font-size 1.1em
  


