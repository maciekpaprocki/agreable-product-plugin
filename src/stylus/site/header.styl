.site-header
  margin 0 auto
  padding 12px 20px
  z-index 10
  @media (max-width: 767px)
    background-color bestBeautyPink
    height 52px
    left 0
    position fixed
    text-align center
    top 0
    width 100%
  @media ipadsAndUp
    background-color transparent
    padding 20px
    position relative

.site-header__logo
  display inline-block
  height 28px
  width 167px
  vertical-align middle
  @media ipadsAndUp
    background-color bestBeautyPink
    height 52px
    width 200px
