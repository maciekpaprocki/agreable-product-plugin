{% extends('@AgreableProductPlugin/base.twig') %}

{% block header %}
  {% include '@AgreableProductPlugin/site-header/template.twig' with {
    context: 'category'
  } %}
{% endblock %}

{% block content %}

  {% set image = product_collection_category.category_image.url %}
  {% set image_mobile = product_collection_category.category_image_mobile.url %}

  <style media="screen">
    {% if image_mobile %}
      .product_collection-header {
        background-image: url({{image_mobile}})
      }
      @media (min-width: 768px) {
    {% endif %}
      .product_collection-header {
        background-image: url({{image}})
      }
    {% if image_mobile %}
      }
    {% endif %}
  </style>

  <div class="product_collection-header">
    <h1 class="product_collection-header-category">
      <span class="visually-hidden">Best </span>
      {{product_collection_category.name}}
      <span class="visually-hidden">Products</span>
    </h1>
  </div>
  {% for sub_category in product_collection_category.sub_categories %}
    {% include "@AgreableProductPlugin/product-list/template.twig" with {
      products: sub_category.products,
      title: sub_category.sub_category_name
    } %}
  {% endfor %}
{% endblock %}
