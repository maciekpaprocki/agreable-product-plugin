.product_information-half
	width 100%
	display inline-block
	vertical-align top
	margin-bottom 30px
	@media ipadsAndUp
		width 49%
		
.product_information-half-left
	text-align center

.product_information-image
	max-width 300px
	margin-bottom 30px
		
.winner-badge
	display	inline-block
	background bestBeautyPink
	padding 10px 15px
	letter-spacing 2.6px
	color #fff
	text-transform uppercase
	margin-right 15px
	float left
	font-weight 500

.product_information-title
.product_information-brand
.product_information-description
.product_information-offer
.product_information-author
	font-weight 300
	
.product_information-title
	margin-bottom 10px
	
.product_information-brand
	color bestBeautyPink
	font-size 14px
	margin-top 0
	margin-bottom 25px
	
.product_information-finer-details
.product_information-author
	text-align right
	
.product_information-finer-details
	border-top 1px solid #DBDBDB
	border-bottom 1px solid #DBDBDB
	padding 15px 0

.product_information-finer-details h3
	font-style italic
	
.product_information-price
	font-weight 800
	margin-top 0
	margin-bottom 0
	
.product_information-offer
	font-size 14px
	margin-top 0
	margin-bottom 0
	
.product_information-description
	line-height 1.64
	
.product_information-quote
	color #4e4e4e
	font-weight 600
	line-height 1.88
	margin-bottom 0
	
.product_information-author
	color bestBeautyPink
	margin-top 5px
	
.product_information-button
	background-color brandColor
	color white
	padding 15px 75px
	text-decoration none
	border-radius 25px
	display	inline-block
	@media smallMobilesOnly
		position fixed
		bottom 20px
		left 20px
		right 20px

.product_information-quote
	font-family secondaryFontFamily
	font-style italic
	font-size 1.1em