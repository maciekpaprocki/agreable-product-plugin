.sub-category-nav
  text-align right
  margin-bottom 20px
  @media smallTabletsAndUp
    margin-bottom 0

.sub-nav-open
  background white
  color bestBeautyPink
  text-transform uppercase
  border 1px solid bestBeautyPink
  padding 10px 20px
  letter-spacing 1.4px
  font-weight 800
  font-size 10px
  margin-right 32px
  @media smallTabletsAndUp
    margin-right 50px
    

.sub-nav-container
  background-color bestBeautyPink
  color white
  text-transform uppercase
  font-weight 700
  letter-spacing 1.4px
  text-align center
  padding 20px 0
  height auto
  left 100%
  overflow auto
  max-width 375px
  position fixed
  top 52px
  transform translateX(0)
  transition 1s
  width 100%
  will-change translateX
  &[aria-hidden="false"]
    transform translateX(-100%)
  @media smallTabletsAndUp
    top 20vh
    max-width 300px
    
.sub-nav-container_title
  background white
  color bestBeautyPink
  padding 10px 0
  font-size 13px
    
.sub-nav-container ul
  list-style none
  padding 20px

.sub-nav-container_item
  text-decoration none
  padding 10px 20px
  font-size 13px
  &:hover
    border 1px solid white