//Imports from app theme
@import 'nib'
@import 'app/constants'
@import 'allure-breakpoints'
@import 'allure-mixins'
@import 'app/mixins'


//Custom styles for this plugin
@import 'category-links'
@import 'product/star-rating'
@import 'product/share-buttons'
@import 'product/product-grid-view.styl'

.product_collection
	max-width pageColumnWidth
	margin 0 auto
	font-family secondaryFontFamily
	@media ipadsAndUp
		margin 0 auto 50px auto
		
.product_collection-heading
	font-family secondaryFontFamily
	text-transform uppercase
	letter-spacing 3px
	line-height 1.5em
	width 60%
	margin-bottom 50px
	@media ipadsAndUp
		width 40%
		
.product_collection_landing
	display flex
	align-items center
	justify-content center
	height 100vh
	text-align center

.product_collection_landing-content
	max-width 50%
	.product_collection-category-list
		margin-top -100px
		
.product_collection_logo-small
	max-width 150px
	float right

.product_information-half
	width 100%
	display inline-block
	vertical-align top
	margin-bottom 30px
	@media ipadsAndUp
		width 49%
		
.product_information-half-left
	text-align center
	
.product_information-image
	max-width 300px
	margin-bottom 30px
		
.winner-badge
	display	inline-block
	background bestBeautyPink
	padding 10px 15px
	letter-spacing 2.6px
	color #fff
	text-transform uppercase
	margin-right 15px
	float left

.product_information-title
.product_information-brand
.product_information-description
.product_information-offer
.product_information-author
	font-weight 300
	
.product_information-title
	margin-bottom 10px
	
.product_information-brand
	color bestBeautyPink
	font-size 14px
	margin-top 0
	margin-bottom 25px
	
.product_information-finer-details
.product_information-author
	text-align right
	
.product_information-finer-details
	border-top 1px solid #DBDBDB
	border-bottom 1px solid #DBDBDB

.product_information-finer-details h3
	font-style italic
	
.product_information-price
	font-weight 800
	margin-top 15px
	margin-bottom 0
	
	
.product_information-offer
	font-size 14px
	margin-top 0
	margin-bottom 15px
	
.product_information-description
	line-height 1.64
	
.product_information-quote
	color #4e4e4e
	font-weight 600
	line-height 1.88
	margin-bottom 0
	
.product_information-author
	color bestBeautyPink
	margin-top 5px

.product_information-button
	background-color brandColor
	color white
	padding 15px 75px
	text-decoration none
	border-radius 25px
	display	inline-block
	@media smallMobilesOnly
		position fixed
		bottom 20px
		left 20px
		right 20px

.product_information-quote
	font-family secondaryFontFamily
	font-style italic
	font-size 1.1em
  


