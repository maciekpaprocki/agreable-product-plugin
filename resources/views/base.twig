{% block html_head_container %}

  <html class="no-js" itemscope itemtype="http://schema.org/Article">
  <head>
    <meta charset="UTF-8" />

    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <link href='https://fonts.googleapis.com/css?family=Raleway:300,700,900' rel='stylesheet' type='text/css'>

    {# FACEBOOK OPEN GRAPH META TAGS #}
    <meta property="og:type" content="article">
    {% if options.facebook_page_url is not empty%}
      <meta property="article:author" content="{{site.name}}" />
      <meta property="article:publisher" content="{{options.facebook_page_url}}" />
    {% endif %}
    <meta property="fb:app_id" content="{{options.facebook_app_id}}">
    <meta property="og:site_name" content="{{site.name}}"/>
    <meta property="og:url" content="{{product.permalink}}"/>
    <meta property="og:title" content="{{product.post_title}}"/>
    <meta property="og:image" content="{{ product.get_field('product_images')[0].sizes.square }}"/>

    {# TWITTER CARD #}
    <meta name="twitter:card" content="summary_large_image"/>
    {% if options.twitter_id is not empty %}
      <meta name="twitter:site" content="@{{options.twitter_id|replace({'@': ''})}}"/>
    {% endif %}
    <meta name="twitter:url" content="{{product.permalink}}"/>
    <meta name="twitter:title" content="{{product.post_title}}"/>
    <meta name="twitter:image" content="{{ product.get_field('product_images')[0].sizes.square }}"/>


    {# APPLICATION SETTINGS #}
    <meta name="apple-mobile-web-app-title" content="{{site.name}}">
    <meta name="application-name" content="{{site.name}}">

    {% if options.facebook_app_id is not empty %}
      <script>
        var FB_APP_ID = "{{options.facebook_app_id}}";
      </script>
    {% endif %}

    {# {% if env == "development" %} #}

      {{ product_plugin.js_string | raw }}

    {#
    {% else %}

      <script>
        {{js_string|raw}}
      </script>

    {% endif %}
    #}

    {% block head %}
    {% endblock %}

  </head>
{% endblock %}

  <body>
    {% block header %}{% endblock %}
    <main class="site-content">
      {% block content %}{% endblock %}
    </main>
  </body>
</html>
