
.site-nav-container
  background-color rgba(bestBeautyPink, 0.9)
  border 20px solid #fff
  height 100%
  left 0
  opacity 0
  overflow auto
  padding 60px 20px 20px
  position fixed
  text-align center
  top 0
  transition  opacity 150ms ease-out,
              visibility 150ms ease-out,
              border-width 150ms ease-out
  visibility hidden
  width 100%
  will-change opacity
  &[aria-hidden="false"]
    opacity 1
    visibility visible
  @media ipadsAndUp
    border-width 50px
    padding 40px


