
/*  Container */
/*  ----------------------------------- */
.site-nav-container
  background-color rgba(bestBeautyPink, 0.95)
  border 20px solid #fff
  display flex
  flex-direction column
  height 100%
  left 0
  opacity 0
  overflow auto
  padding 60px 20px 20px
  position fixed
  text-align center
  top 0
  transition  opacity 150ms ease-out,
              visibility 150ms ease-out
  visibility hidden
  width 100%
  will-change transform
  // -webkit-overflow-scrolling touch
  z-index 20
  &[aria-hidden="false"]
    opacity 1
    visibility visible
  @media ipadsAndUp
    border-width 50px
    padding 40px
.site-nav-container__inner
  margin auto


/*  Open control */
/*  ----------------------------------- */
.site-nav-open
  background-color transparent
  cursor pointer
  display inline-block
  height 52px
  position absolute
  right 0
  top 0
  width 60px
  &:focus
    outline none
  @media ipadsAndUp
    right 26px
    top 26px
    width 52px

// Menu icon
.site-nav-open svg
  @media ipadsAndUp
    height auto
    width 29px
.site-nav-open path
  fill #fff
  transition fill 150ms ease-out
  @media ipadsAndUp
    fill bestBeautyPink
// Contexts
.site-header--context-category .site-nav-open path,
.site-header--context-landing .site-nav-open path
  fill #fff
// Sticky open button on scroll
.site-nav-open--sticky
  @media (max-width: 767px)
    display none
  @media ipadsAndUp
    background-color bestBeautyPink
    box-shadow inset 0 0 0 0 bestBeautyPink
    border-radius 50%
    opacity 0
    position fixed
    transform translateY(-10px)
    transition background-color 150ms ease-out,
               opacity 150ms ease-out,
               box-shadow 150ms ease-out,
               visibility 150ms ease-out,
               transform 150ms ease-out
    visibility hidden
    z-index 10
    width 59px
    height 59px
    &:hover,
    &:focus
      background-color #fff
      box-shadow inset 0 0 0 2px bestBeautyPink
    &.is-sticky
      opacity 1
      transform translateY(0)
      visibility visible
.site-header--context-category .site-nav-open--sticky:hover path,
.site-header--context-category .site-nav-open--sticky:focus path
  fill bestBeautyPink


/*  Close control */
/*  ----------------------------------- */
.site-nav-close
  background-color #fff
  background-image url('data:image/svg+xml;charset=US-ASCII,%3Csvg%20width%3D%2232%22%20height%3D%2232%22%20viewBox%3D%2218%2018%2032%2032%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%3E%3Cpath%20d%3D%22M21.18%2021.18l25.46%2025.46M46.82%2021.18L21.36%2046.64%22%20stroke%3D%22%23e7126a%22%20stroke-width%3D%224%22%20stroke-linecap%3D%22square%22%20fill%3D%22none%22%2F%3E%3C%2Fsvg%3E')
  background-position center center
  background-repeat no-repeat
  background-size 22px
  border-radius 50%
  cursor pointer
  height 40px
  overflow hidden
  position absolute
  right 20px
  text-indent 200%
  transition background-color 150ms ease-out,
             color 150ms ease-out,
             box-shadow 150ms ease-out
  top 20px
  white-space nowrap
  width 40px
  &:hover,
  &:focus
    background-color transparent
    background-image url('data:image/svg+xml;charset=US-ASCII,%3Csvg%20width%3D%2232%22%20height%3D%2232%22%20viewBox%3D%2218%2018%2032%2032%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%3E%3Cpath%20d%3D%22M21.18%2021.18l25.46%2025.46M46.82%2021.18L21.36%2046.64%22%20stroke%3D%22%23fff%22%20stroke-width%3D%224%22%20stroke-linecap%3D%22square%22%20fill%3D%22none%22%2F%3E%3C%2Fsvg%3E')
    box-shadow inset 0 0 0 3px #fff
    outline none
  @media ipadsAndUp
    background-size 32px
    height 68px
    width 68px

.site-nav-close:hover path,
.site-nav-close:focus path
  fill transparent


/*  Logo */
/*  ----------------------------------- */
.site-nav-container__logo
  fill #fff
  max-width 320px
  width 70%
  margin 0 auto 40px
  transform translateY(20px)
  opacity 0.5
  transition  opacity 250ms ease-out 50ms,
              transform 250ms ease-out 50ms
  .fr-offcanvas--is-active &
    transform translateY(0)
    opacity 1
  @media ipadsAndUp
    margin-bottom 80px
.site-nav-container__logo svg
  width 100%


/*  Sub navigation */
/*  ----------------------------------- */
.sub-nav
  list-style none
  margin-top 40px
  @media smallTabletsAndUp
    font-size 0
    margin-left -20px
.sub-nav__list-item
  @media smallTabletsAndUp
    font-size 16px
    display inline-block
    padding-left 20px
    width 50%
    vertical-align middle
.sub-nav__item
  border-bottom 1px solid rgba(#fff, 0.5)
  color #fff
  display block
  font-size 12px
  font-weight 600
  letter-spacing 2px
  line-height 20px
  padding 16px 8px
  text-decoration none
  text-transform uppercase
  transition letter-spacing 150ms ease-out
  &:hover,
  &:focus
    letter-spacing 3px
.sub-nav__list-item:last-child .sub-nav__item
  border-bottom 0
@media smallTabletsAndUp
  .sub-nav__list-item:nth-last-child(-n+2) .sub-nav__item
    border-bottom 0
