
img
  width 100%
  max-width 100%
  vertical-align middle

//  Product section
.product-collection
  margin 0 auto 80px
  position relative

.product-collection__title
  font-family secondaryFontFamily
  line-height 1.2
  letter-spacing 3px
  margin-bottom 60px
  max-width 300px
  position relative
  text-transform uppercase
  z-index 1
  @media ipadsAndUp
    font-size 36px
    max-width 400px

.solid-background
  background rgba(bestBeautyPink, .2)
  height 35px
  position absolute
  width 200px
  left 0
  top 20px
  @media ipadsAndUp
    height 45px
    width 240px
  @media (min-width: 1600px)
    width	calc(50vw - 800px + 240px)
.circle-background
  background-image radial-gradient(rgba(bestBeautyPink, .5) 0, rgba(bestBeautyPink, .5) 20%, transparent 20%),
                   radial-gradient(rgba(bestBeautyPink, .5) 0, rgba(bestBeautyPink, .5) 20%, transparent 20%)
  background-size 10px 10px
  background-position 0 0, 15px 15px
  height 40px
  position absolute
  width 140px
  left 0
  top 0
  @media ipadsAndUp
    height 60px
    width 200px
  @media (min-width: 1600px)
    width	calc(50vw - 800px + 140px)
