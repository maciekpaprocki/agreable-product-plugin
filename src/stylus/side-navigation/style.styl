.side-category-nav
  text-align center
  @media ipadsAndUp
    text-align right

.side-nav-open
  background #fff
  border 2px solid $best-beauty-highlight
  color $best-beauty-highlight
  cursor pointer
  display inline-block
  font-size 14px
  font-weight 800
  letter-spacing 1.4px
  padding 16px 20px
  text-transform uppercase
  transition background-color $duration $easing,
             color $duration $easing
  margin-bottom 32px
  max-width 280px
  width calc(100% - 64px)
  &:hover,
  &:focus
    background-color $best-beauty-highlight
    color #fff

.side-nav-container
  background-color $best-beauty-highlight
  color white
  height 100vh
  left 100%
  max-width 420px
  overflow-y auto
  padding 30px 0
  position fixed
  top 0
  transform translateX(0)
  transition transform 200ms $easing,
             visibility 200ms $easing
  width 100%
  will-change transform
  z-index 15
  &[aria-hidden="false"]
    transform translateX(-100%)
  &:focus
    outline none

.list-sub-categories
  list-style none
  padding 0 20px
  text-align center

.list-sub-categories__item
  border 2px solid $best-beauty-highlight
  display inline-block
  font-size 16px
  font-weight 600
  letter-spacing 1px
  padding 16px 20px
  text-decoration none
  text-transform uppercase
  transition border-color 75ms $easing
  &:hover,
  &:focus
    border-color #fff
    outline none

.side-nav-title
  background #fff
  color $best-beauty-highlight
  font-size 16px
  font-weight 800
  letter-spacing 1px
  margin-bottom 20px
  padding 20px 0
  text-align center
  text-transform uppercase
  @media (min-width: 360px)
    letter-spacing 3px

.side-nav-close
  background-color transparent
  background-image url('data:image/svg+xml;charset=US-ASCII,%3Csvg%20width%3D%2232%22%20height%3D%2232%22%20viewBox%3D%2218%2018%2032%2032%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%3E%3Cpath%20d%3D%22M21.18%2021.18l25.46%2025.46M46.82%2021.18L21.36%2046.64%22%20stroke%3D%22%23e7126a%22%20stroke-width%3D%224%22%20stroke-linecap%3D%22square%22%20fill%3D%22none%22%2F%3E%3C%2Fsvg%3E')
  background-position center center
  background-repeat no-repeat
  background-size 16px
  cursor pointer
  height 58px
  overflow hidden
  position absolute
  right 0
  text-indent 200%
  top 30px
  white-space nowrap
  width 58px
