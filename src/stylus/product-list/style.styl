
//  Product list
.product-list
  padding 0 32px
  list-style none
  @media (max-width: 767px)
    -webkit-overflow-scrolling touch
    overflow-x scroll
    overflow-y none
    white-space nowrap
  @media ipadsAndUp
    padding-left 0
    margin-left auto
    margin-right auto
    max-width 1600px
.product-list--narrow
  @media ipadsAndUp
    max-width 960px

.product-list__list-item
  height calc(120vw + 1px)
  // height calc(100% + 1px) // http://patrickmuff.ch/blog/2014/10/01/how-we-fixed-the-webkit-overflow-scrolling-touch-bug-on-ios/
  @media (max-width: 767px)
    max-width 420px
    white-space normal
    width calc(100vw - 96px) // should show 2 * gutter-width of next product
  @media ipadsAndUp
    width 50%
  @media (min-width: 1000px)
    width 33.333%
  @media (min-width: 1300px)
    width 25%

.product-list--narrow .product-list__list-item
  @media (min-width: 1300px)
    width 33.333%
